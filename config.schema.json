              }
            },
            "noMotionTimer": {
              "type": "integer",
              "title": "No Motion Timer",
              "description": "A timer (in seconds) for how long after motion is not detected that the state is changed.",
              "placeholder": 60,
              "minimum": 0,
              "condition": {
